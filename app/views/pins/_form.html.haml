= simple_form_for @pin, html: { multipart:true } do |f|
	- if @pin.errors.any?
		#errors
			%h2
			= pluralize(@pin.errors.count, "error")
			prevented this Pin from saving
			%ul
				- @pin.errors.full_messasges.each do |msg|
					%li= msg

	.form-group
		= f.input :image, input_html: { class: 'form-control' }

	.form-group
		= f.collection_select :category_id, Category.all, :id, :name, {prompt: "Choose a category"}, {class: "btn btn-default dropdown-toggle"}

	.form-group
		= f.input :title, input_html: { class: 'form-control' }

	.form-group
		= f.input :description, input_html: { class: 'form-control' }

	.form-group
		= f.input :also_known_as, input_html: { class: 'form-control' }

	.form-group
		= f.input :recipe, input_html: { class: 'form-control' }


	= f.button :submit, class: "btn btn-primary"